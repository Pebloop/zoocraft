<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="horizontal">
                    <children>
                        <flow-layout direction="horizontal">
                            <children>
                                <button id="left">
                                    <text>&lt;</text>
                                </button>
                            </children>
                            <vertical-alignment>bottom</vertical-alignment>
                            <padding>
                                <all>5</all>
                            </padding>
                        </flow-layout>
                        <flow-layout direction="vertical">
                            <children>
                                <label id="name">
                                    <text>Name</text>
                                    <color>black</color>
                                </label>
                                <flow-layout direction="vertical" id="entity_container">
                                    <children>
                                    </children>
                                    <sizing>
                                        <vertical method="fixed">50</vertical>
                                        <horizontal method="fixed">50</horizontal>
                                    </sizing>
                                </flow-layout>
                            </children>
                            <padding>
                                <all>10</all>
                            </padding>
                        </flow-layout>
                        <flow-layout direction="horizontal">
                            <children><button id="right">
                                <text>&gt;</text>
                            </button></children>
                            <vertical-alignment>bottom</vertical-alignment>
                            <padding>
                                <all>5</all>
                            </padding>
                        </flow-layout>
                    </children>
                    <surface>
                        <panel/>
                    </surface>
                    <padding>
                        <all>10</all>
                    </padding>
                </flow-layout>
            </children>
            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>
            <padding>
                <all>10</all>
            </padding>
            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>