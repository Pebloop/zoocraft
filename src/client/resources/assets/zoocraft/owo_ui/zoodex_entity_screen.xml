    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="horizontal">
                    <children>
                        <flow-layout direction="vertical">
                            <children>
                                <label id="name">
                                    <text>Name</text>
                                    <color>black</color>
                                </label>
