                            </children>
                        </flow-layout>
                    </children>
                    <surface>
                        <panel/>
                    </surface>
                    <padding>
                        <all>10</all>
                    </padding>
                </flow-layout>
            </children>
            <horizontal-alignment>center</horizontal-alignment>
