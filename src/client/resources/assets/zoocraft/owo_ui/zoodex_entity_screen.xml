<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="horizontal">
                    <children>
                        <flow-layout direction="vertical">
                            <children>
                                <label id="name">
                                    <text>Name</text>
                                    <color>black</color>
                                </label>
                                <flow-layout direction="vertical" id="entity_container">
                                    <children>
                                    </children>
                                </flow-layout>
                            </children>
                        </flow-layout>
                        <flow-layout direction="vertical">
                            <children>
                                <label>
                                    <text>Health</text>
                                    <color>black</color>
                                </label>
                                <box id="health">
                                    <sizing>
                                        <horizontal method="fixed">50</horizontal>
                                        <vertical method="fixed">10</vertical>
                                    </sizing>
                                    <color>red</color>
                                </box>
                                <label>
                                    <text>Hunger</text>
                                    <color>black</color>
                                </label>
                                <box id="hunger">
                                    <sizing>
                                        <horizontal method="fixed">50</horizontal>
                                        <vertical method="fixed">10</vertical>
                                    </sizing>
                                    <color>yellow</color>
                                </box>
                                <label>
                                    <text>Environment</text>
                                    <color>black</color>
                                </label>
                                <box id="needs">
                                    <sizing>
                                        <horizontal method="fixed">0</horizontal>
                                        <vertical method="fixed">10</vertical>
                                    </sizing>
                                    <color>blue</color>
                                </box>
                            </children>
                        </flow-layout>
                    </children>
                    <surface>
                        <panel/>
                    </surface>
                    <padding>
                        <all>10</all>
                    </padding>
                </flow-layout>
            </children>
            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>
            <padding>
                <all>10</all>
            </padding>
            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>