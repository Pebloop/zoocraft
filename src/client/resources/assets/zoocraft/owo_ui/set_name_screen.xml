<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <label>
                            <text>What's its name ?</text>
                            <color>black</color>
                        </label>
                       <text-box id="name_input">
                           <sizing>
                               <vertical method="fixed">20</vertical>
                                 <horizontal method="fixed">100</horizontal>
                           </sizing>
                           <tooltip-text>Name</tooltip-text>
                       </text-box>
                        <button id="save_name">
                            <text>Save</text>
                        </button>
                    </children>
                    <surface>
                        <panel/>
                    </surface>
                    <padding>
                        <all>10</all>
                    </padding>
                </flow-layout>
            </children>
            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>
            <padding>
                <all>10</all>
            </padding>
            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>